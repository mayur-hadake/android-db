<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".idCard">

        <View
            android:id="@+id/myview"
            android:layout_width="347dp"
            android:layout_height="690dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/idimg"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="125dp"
            android:focusedByDefault="true"
            app:layout_constraintEnd_toEndOf="@+id/myview"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idimg" />

        <TextView
            android:id="@+id/idcourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idname" />

        <TextView
            android:id="@+id/iddob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idcourse" />


        <TextView
            android:id="@+id/idmob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/iddob" />

        <TextView
            android:id="@+id/idemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idmob" />

        <TextView
            android:id="@+id/idadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idemail" />

        <TextView
            android:id="@+id/idbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="20dp"
            android:text="Blood Group :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idcourse" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="Date of Birth :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idcourse" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:text="Mobile Number :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/iddob" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:text="Email id :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idmob" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:text="Address :"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/idemail" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/vplogo"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toTopOf="@+id/myview" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="244dp"
            android:layout_height="71dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text=" Vidya Pratishthan's\n Art's Science and Commerce College\n Vidyanagari, Baramati, Dist:Pune\n Contact: 91-02112-239166"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/myview" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="50dp"
            android:text="Dr. Bharat Shinde"
            app:layout_constraintBottom_toBottomOf="@+id/myview"
            app:layout_constraintEnd_toEndOf="@+id/myview" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="20dp"
            android:text="Principle"
            app:layout_constraintBottom_toBottomOf="@+id/myview"
            app:layout_constraintEnd_toEndOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Year Of Admission :"
            app:layout_constraintBottom_toBottomOf="@+id/myview"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="2022-23"
            app:layout_constraintBottom_toBottomOf="@+id/myview"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="572dp"
            android:text="show dp"
            app:layout_constraintStart_toStartOf="@+id/myview"
            app:layout_constraintTop_toTopOf="@+id/myview" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

